<div class="container" id="chat_area">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-xs-12">
        <em>
          <%= post.name if !post.name.blank? %>
          <%= "Someone" if post.name.blank? %> said 
        </em><span class="text"><%= post.text %></span><br>
        <%= image_tag(post.picture_url) if post.picture.present? %> 
      </div>
    </div>
  <% end %>
</div>

