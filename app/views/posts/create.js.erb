// Pack name and message into message variable
var message = {
  from: $("#post_name").val(),
  text: $("#post_text").val(),
  postid: <%= @post.id %>
};

if ($("#post_picture").val()) {
  message.picturePresent = "true";
  message.pictureURL = "<%= @post.picture_url %>";
}

// Send the message
post_socket.trigger('in_message', message);

// Clear the text field
$("#post_text").val("");
$("#post_picture").val("");

